# 6. Skript, mis lõikab inimesed failist eesnimed ja salvesta need konveier kataloogi eesnimed faili sisse
cut -d',' -f2 inimsesd.txt | cut -d';' -f1 > /home/user/skriptimine/konveier/eesnimed.txt

# 7. Skrpit, mis lõikab inimesed failist perenimed  ja salvesta need konveier kataloogi perenimed faili sisse
cut -d':' -f2 inimesed.txt | cut -d',' -f1 > /home/user/skriptimine/konveier/perenimed.txt

# 8. Skript; mis lõikab inimesed failist domeenid ja salvesta need konveier kataloogi domeenid faili sisse
cut -d'-' -f2 inimesed.txt > /home/user/skriptimine/konveier/domeenid.txt

# 9. Skript, mis muutab eesnimed failis kõik tähed väikesteks
cat /home/user/skriptimine/konveier/eesnimed.txt | tr '[:upper:]' '[:lower:]' > /home/user/skriptimine/konveier/eesnimed.tmp && mv /home/user/skriptimine/konveier/eesnimed.tmp /home/user/skriptimine/konveier/eesnimed.txt

#10. Skript, mis muutab peremined failis kõik tähed väikesteks
 cat /home/user/skriptimine/konveier/perenimed.txt | tr '[:upper:]' '[:lower:]' > /home/user/skriptimine/konveier/perenimed.tmp && mv /home/user/skriptimine/konveier/perenimed.tmp /home/user/skriptimine/konveier/perenimed.txt

#11. Skript, mis loob konveier kataloogis fail kasutajad, mille sisuks on kasutajate nimed kujul eesnimi.perenimi
paste -d'.' /home/user/skriptimine/konveier/eesnimed.txt /home/user/skriptimine/konveier/perenimed.txt > /home/user/skriptimine/konveier/kasutajad.txt

#12. Skript, mis loob konveier kataloogis fail meilid, mille sisuks on kasutajate meilid kujul eesnimi.perenimi@domeen
 paste -d'.' /home/user/skriptimine/konveier/eesnimed.txt /home/user/skriptimine/konveier/perenimed.txt | paste -d'@' - /home/user/skriptimine/konveier/domeenid.txt > /home/user/skriptimine/konveier/meilid.txt
